<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="snackbarStyle">@style/BottomSheetSnackbar</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_rect_top_20_dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BottomSheet2" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_rect_top_20_dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BottomSheetSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">16dp</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="CustomButton.Purple">
        <item name="android:backgroundTint">@color/button_purple_background_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.PurpleDark">
        <item name="android:backgroundTint">@color/button_purple_dark_background_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">1dp</item>
        <item name="titleTextColor">@color/blue_dark</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitle</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="CustomToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CustomTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/editText_margin_bottom</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="CustomTextInputEditText.LightGray">
        <item name="boxBackgroundColor">@color/gray_light</item>
    </style>

    <style name="CustomTextInputLayout.LightGray">
        <item name="android:textColorHint">@color/purple_dark</item>
        <item name="hintTextColor">@color/purple_dark</item>
        <item name="boxBackgroundColor">@color/gray_light</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="CustomTextView.AutoSize">
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextView.AutoSize">
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="TitleTextView.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>

    <style name="TitleTextView.Regular.AutoSize">
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
</resources>